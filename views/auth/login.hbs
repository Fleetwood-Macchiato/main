<nav class="navbar">
  <a class="navbar-logo" href="/home"><img
      src="/images/coffeelogo.png"
      width="20px"
    /></a>

  <div class="navbar-links-login">
    <a class="navbar-btn" href="/auth/signup"> Sign Up </a>
  </div>
</nav>

<div class="login-form">
  <form class="form1" action="/auth/login" method="post">
    <label for="username"></label>
    <input
      class="un"
      required
      type="text"
      name="username"
      placeholder="type your username"
      align="center"
    />

    <label for="password"></label>
    <input
      class="pass"
      required
      type="password"
      name="password"
      placeholder="password..."
    />

    <button type="submit" class="submit">Login</button>
  </form></div>
{{#if errorMessage}}
  <p>

    {{errorMessage}}
  </p>
{{/if}}