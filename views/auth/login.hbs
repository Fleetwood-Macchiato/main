<h2>Login:</h2><br><br>
<form action="/auth/login" method="POST">
  <label for="username">Username:</label>
  <input
    required
    type="text"
    name="username"
    placeholder="type your username"
  />

  <label for="password">Password:</label>
  <input
    required
    type="password"
    name="password"
    placeholder="hope you remember it..."
  />

  <button type="submit">Login</button>
</form>
{{#if errorMessage}}
  <p>

    {{errorMessage}}
  </p>
{{/if}}