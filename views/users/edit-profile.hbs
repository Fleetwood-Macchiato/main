<h1>Edit profile</h1>

<form action="/users/edit/{{_id}}" method="POST">

  <label for="">Username</label>
  <input
    type="text"
    name="username"
    placeholder="username"
    value="{{username}}"
  />

  <br />
  <label for="">Email</label>
  <input type="text" name="email" placeholder="email" value="{{email}}" />

  <br />
  <button type="submit">Save</button>

</form>